<h1>Items</h1>

<% if @items.empty? %>
  <p>No items in store</p>
<% else %>
  <table>
    <tr>
      <th>ID</th>
      <th>Item</th>
      <th>Description</th>
      <th>Price</th>
    </tr>
    <% @items.each do |i| %>
    <tr>
      <td><%= i.id %></td>
      <td><%= i.name %></td>
      <td><%= i.description %></td>
      <td><%= i.price %> $</td>
    </tr>
    <% end %>
  </table>
<% end %>
